<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

	##################
	##### BUTTONS ####
        ##################

	# Quit button
        Button:
            text: 'X'
            font_size: 23
            size_hint: None, None
            size: root.width * 0.015, root.width * 0.015
            x: root.width * 0.965
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 0
            on_release: root.quit()

        DPEAButton:
            id: auto
            color: 0.9, 0.2, 0.3, 1
            text: "Start"
            font_size: 30
            center_x: root.width * 0.375
            y: root.height * 0.5
            background_color: 1, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.auto()

        # Turn on/off gate
        DPEAButton:
            id: armControl
            color: .137, .58, .3, 1
            text: "Move Arm to Position"
            font_size: 25
            center_x: root.width * 0.25
            y: root.height * 0.3
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.toggleArm()

        DPEAButton:
            id: magnetControl
            color: 0.137, 0.58, 0.3, 1
            text: "Magnet On"
            font_size: 30
            center_x: root.width * 0.75
            y: root.height * 0.3
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: self.text = root.togglemagnet(self.text)

        DPEAButton:
            id: arm_down
            color: 0.137, 0.58, 0.3, 1
            text: "Arm Down"
            font_size: 30
            center_x: root.width * 0.5
            y: root.height * 0.3
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.moveArmDown()

        DPEAButton:
            id: home_arm
            color: 0, .3, .5, 1
            text: "Home Arm"
            font_size: 30
            center_x: root.width * 0.625
            y: root.height * 0.5
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.homeArm()


	##################
	##### SLIDERS ####
        ##################

        Slider:
            id: armPosition
            orientation: 'horizontal'
            min: 0
            max: 3200
            value: root.armPosition
            step: 1
            center_x: root.width * 0.6
            y: root.height * 0.15
            size_hint_x: 7
            on_value: root.setArmPosition(self.value)

        ##################
	##### LABELS #####
        ##################

        Label:
            id: title
            text: 'Robotic Arm'
            font_size: 70
            bold: True
            center_x: root.width * 0.5
            halign: 'center'
            y: root.height * 0.75
            color: 0.9, 0.9, 0.9, 1

        Label:
            id: armControlLabel
            text: 'Arm Position: ' + str(armPosition.value)
            font_size: 40
            center_x: root.width * 0.175
            y: root.height * 0.15
            color: 0.8, 0.8, 0.8, 1

